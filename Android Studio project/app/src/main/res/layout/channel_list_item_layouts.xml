<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/channellistholder"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/f_white_color"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/f_margin_medium"
            android:paddingLeft="@dimen/f_margin_medium"
            android:paddingRight="@dimen/f_margin_mini"
            android:paddingTop="@dimen/f_margin_medium">

            <TextView
                android:id="@+id/channelname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="Channel name"
                android:textColor="@color/f_text_color_dark"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/channledltime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:10 am"
                android:textColor="@color/f_text_color_medium_dark"
                android:textSize="@dimen/f_font_supermini"/>

            <TextView
                android:id="@+id/unsubscrbed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UNSUBSCRIBED CHANNEL"
                android:textColor="@color/f_red_color_primary"
                android:textSize="@dimen/f_font_mini"/>
        </LinearLayout>

        <TextView
            android:id="@+id/lastmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/f_margin_medium"
            android:layout_marginLeft="@dimen/f_margin_large"
            android:singleLine="true"
            android:text="Channel name"
            android:textColor="@color/f_text_color_dark"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/f_grey_shade_4"/>
    </LinearLayout>
</FrameLayout>
